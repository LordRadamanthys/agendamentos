<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDefaultBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_style</item>
        <item name="android:textColor">@color/colorDefaultBlue</item>
    </style>

    <style name="StyleEditText">
        <item name="colorControlActivated">#FFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlHighlight">#FFF</item>
    </style>

    <style name="StyleClockAndDate" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#1C46C1</item>
        <item name="colorPrimaryDark">#101BF1</item>
        <item name="colorAccent">@color/colorDefaultBlue</item>
    </style>
</resources>
